
/////////////////////////
///      COLORS       ///
/////////////////////////

primary = rgb(82, 160, 154)
secondary = rgb(77, 98, 192)
tertiary = rgb(101, 158, 140)

neutral = #f0f0f0
neutral-dark = #333


fixed-background()
  background-color: primary
  background-attachment: fixed, fixed, fixed
  background-image:
    url("/images/stripes.svg"),
    linear-gradient(
      45deg,
      transparentify(tertiary, 0.7) 7%,
      transparentify(primary, 0.7) 33%,
      transparentify(secondary, 0.7)
      ),
    url("/images/texture-block.png")
  background-size: cover, auto, auto

//


/////////////////////////
///      STYLES       ///
/////////////////////////

*
  box-sizing: border-box

body
  font-family: Lato
  font-weight: 300
  font-size: 22px

  fixed-background()


h1, h2, h3, h4
  font-family: "Alegreya Sans SC"
  font-weight: 700

h1
  font-size: 64px
  letter-spacing: 4px
  
h2
  font-size: 36px
  letter-spacing: 2px
  
h3
  font-size: 28px

h4
  font-size: 22px

a
  font-weight: normal
  color: inherit
  text-decoration: none


footer
  display: flex
  justify-content: center

  padding: 64px  
  text-align: center

  color: neutral
  font-weight: 400

  p
    border-top-style: double
    padding: 16px 32px
    border-top-color: rgba(255, 255, 255, 0.3)


.landing
  padding: 64px

  text-align: center
  color: neutral

  > *
    vertical-align: middle

  .logo-wrapper
    display: inline-block

  .logo
    width: 160px
    filter: drop-shadow(8px 8px 12px rgba(0, 0, 0, 0.4))

    path
      fill: neutral
    
  .landing-header
    display: inline-block
    padding-left: 80px
    text-shadow: 8px 8px 12px rgba(0, 0, 0, 0.4)

    .subtitle
      margin-top: -46px
      font-size: 24px

  .cta
    display: inline-block
    padding: 8px 16px
    margin: 6px 9px

    border-style: solid
    border-width: 2px
    border-radius: 4px
    
    font-weight: 400
    font-size: 18px
    text-decoration: none
    color: inherit

    &:hover
      background-color: transparentify(neutral, 0.2)

body section
  display: flex
  padding: 64px

  color: neutral

  > *
    display: inline-block

  .content
    width: 1024px

  &:nth-child(even)
    background-color: neutral
    color: neutral-dark

.module-system
  display: flex
  align-items: center

  aside
    flex: 0 1 400px
    margin-right: 64px
